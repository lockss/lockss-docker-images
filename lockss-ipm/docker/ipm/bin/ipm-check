_0="$(basename "${0}")"

ARG="${1}"

if [ "${ARG}" = "--help" ]; then
  echo "Usage: ${_0} IPKG"
  echo "Prints true if the idealized package is currently installed, false otherwise"
  exit 0
fi

if [ $# -ne 1 ]; then
  echo "${_0}: expected exactly one argument but got $#" >&2
  exit 1
fi

if ! which ipm-check-native > /dev/null 2>&1 ; then
  echo "${_0}: ipm-check-native is not on the PATH" >&2
  exit 1
fi

for npkg in $(ipm-translate "${ARG}") ; do
  if ! ipm-check-native "${npkg}" ; then
    echo 'false'
    exit 0
  fi 
done

echo 'true'
exit 0
